<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="quiz_form">
        <%= render 'shared/quiz_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Quiz results(<%= @user.quizzes.count %>)</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
<div class="center jumbotron">
  <h1>Welcome to the Dolche Nouns Flashcard App</h1>

  <h2>
    This is the home page for the
    Dolche Nouns Flashcard application.
  </h2>

  <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
</div>
<% end %>
