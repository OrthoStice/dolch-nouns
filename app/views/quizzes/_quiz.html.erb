<li id="quiz-<%= quiz.id %>">
  <%= link_to gravatar_for(quiz.user, size: 50), quiz.user %>
  <span class="user"><%= link_to quiz.user.name, quiz.user %></span>
  <span class="student"><%= quiz.student %></span>
  <span class="student"><%= quiz.score %></span>
  <span class="timestamp">
    Posted <%= (quiz.created_at) %> 
    <% if current_user?(quiz.user) %>
      <%= link_to "delete", quiz, method: :delete,
                                       data: { confirm: "You sure?" } %>
    <% end %>    
  </span>
</li>