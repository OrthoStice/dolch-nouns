<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section><%= link_to "Add Quiz Results Here", root_path %></section>
  </aside>
  <div class="col-md-8">
    <% if @user.quizzes.any? %>
      <h3>Quiz Results (<%= @user.quizzes.count %>)</h3>
      <ol class="quizzes">
        <%= render @quizzes %>
      </ol>
      <%= will_paginate @quizzes %>
    <% end %>
  </div>  
</div>